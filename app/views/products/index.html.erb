<h1>Listing products</h1>

<div class="ProductList">
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th id="action"></th>
      <th id="action"></th>
      <th id="action"></th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.image_url %></td>
      <td id="action"><%= link_to 'Show ', product %></td>
      <td id="action"><%= link_to 'Edit ', edit_product_path(product) %></td>
      <td id="action"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Product', new_product_path %>
</div>
