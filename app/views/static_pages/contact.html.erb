<link rel="stylesheet" href="stylesheets/Contactpage.css">


<div class="row">
      <div class="col-lg-3 col-md-2 col-sm-1 col-xs-0">
      </div>

      <form class="col-lg-6 col-md-8 col-sm-7 col-xs-12">
        <h2>Basic Contact Information</h2>
        <div class="form-group">
          <label class="form-label" for="name">Your Name</label>
          <input type="text" placeholder="Enter your name" class="form-control" id="name" required>
        </div> 
        
        <div class="form-group"> 
          <label class="form-label" for="email">e-mail address</label>
          <input type="email" placeholder="Your e-mail address" title="Mandatory Field" class="form-control" id="email" required>
        </div>
     
        <div class="form-group">
          <label class="form-label" id="messagelabel" for="message">Write your message here</label>
          <textarea placeholder="Your message here" class="message-box form-control" style="resize:vertical" id="message" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary" id="SubmitButton">Submit</button>
        <button type="reset" class="btn btn-danger">Reset</button>      
      </form>

      <div class="col-lg-3 col-md-2 col-sm-1 col-xs-0">
      </div>

</div>